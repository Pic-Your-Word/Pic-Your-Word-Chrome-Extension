{
  "manifest_version": 2,
  "name": "Pic Your Word",
  "description": "Find images and explainations instantly by highlighting the words.",
  "version": "0.1",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>"],
      "js": ["js/jquery.min.js", "js/content.js"],
      "css": ["css/bootstrap_card.css"]
    }
  ],
  "icons": { "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
    },
  "browser_action": {
      "default_icon": "icons/icon.png",
      "default_title": "Pic Your Word",
      "default_popup": "iconPopup.html"
  },
  "permissions": [
      "webRequest",
      "storage",
      "*://*.google.com/",
       "*://*.wikipedia.org/"
  ],
  "web_accessible_resources": ["icons/notFound_.png"]
}
